@model PagingList<Car>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Model)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Producent)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.PojemmoscSilnika)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Moc)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.RodzajSilnika)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.NrRejestracyjny)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Wlasciciel)</th>
            <th>@Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Priority)</th>
            <th>Akcje</th>
        </tr>
    </thead>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.IsPrevious)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Car"
                   asp-action="PagedIndex"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-size="@Model.Size">
                    Poprzednia
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Poprzednia</a>
            </li>
        }
        <li class="page-item disabled">
            <a class="page-link">@Model.Page</a>
        </li>
        @if (Model.IsNext)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Car"
                   asp-action="PagedIndex"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-size="@Model.Size">
                    Następna
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Następna</a>
            </li>
        }
    </ul>
</nav>